  <h1>New Product</h1>

  <form action="/newProduct" method="post">
    <div class="form-group">
      <label>Name:</label>
      <input class="form-control" id="inputdefault" type="text" name="txtName">
      <br>
      {{nameError}}
    </div>
    <div class="form-group">
      <label>Price:</label>
      <input class="form-control" id="inputdefault" type="text" name="txtPrice">
      <br>
      {{priceError}}
    </div>
    <div class="form-group">
      <label>Picture:</label>
      <input class="form-control" id="inputdefault" type="text" name="txtPicture">
    </div>
    <div class="from-group">
      <input type="submit" value="Create Product">
    </div>
  </form>
  </div>
